    <script type="text/javascript">
        $(function () {
            $('#startscheduledatetime').datetimepicker({
                locale: 'pl',
                //inline: true,
                //sideBySide: true,
                stepping: 15
            });
        });
        $(function () {
            $('#finishscheduledatetime').datetimepicker({
                locale: 'pl',
